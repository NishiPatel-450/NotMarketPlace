@using EmailConfirm.Models
@model Login
@{
    Layout = "~/Views/Shared/css_js.cshtml";
}
<body>
    <section id="login">
        <div class="login container">
            <div class="login-content row">
                <div class="logo text-center col-md-12 col-sm-12 col-xs-12">
                    <img src="~/img/top-logo.png">
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4"></div>
                <div class="login-form col-md-4 col-sm-4 col-xs-4">
                    <div class="heading text-center">
                        <h3>Login</h3>
                        <p>Enter Your email address and password to login</p>
                    </div>
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "RegisterUser", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal contactform", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                </div>
                                <div class="col-md-12">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Email Address" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.ActionLink("Forgot password?", "ForgotPassword", "RegisterUser", routeValues: null, htmlAttributes: new { @class = "fplink" })
                                </div>

                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.CheckBoxFor(m => m.RememberMe)
                                    @Html.LabelFor(m => m.RememberMe)
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="LOGIN" class="btn col-md-12" />
                            </div>
                            <p class="text-center">
                                Don't have an account?
                                @Html.ActionLink("Sign Up", "Register")
                            </p>

                        }
                    </section>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4"></div>
            </div>
        </div>
    </section>


</body>