
@{
    Layout = null;

    Layout = "~/Views/Shared/css_js.cshtml";
}


<!DOCTYPE html>
<html lang="en">

<body>


    <!--Header-->
    <header>
        <nav class="navbar navbar-fixed-top white-nav-top">
            <div class="container">
                <div class="site-nav-wrapper">

                    <div class="navbar-header">

                        <!--Mobile menu Open Button-->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <!--Logo-->
                        <a href=@Url.Action("Index","Home") class="navbar-brand">
                            <img src="~/img/logo.png" alt="logo">
                        </a>
                    </div>

                    <!--Main Menu-->
                    <div class="container">
                        <div class="collapse navbar-collapse">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>

                    <!--Mobile menu-->
                    <div id="mobile-nav">
                        <span id="mobile-nav-close-btn">&times;</span>
                        <div id="mobile-nav-content">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>

                </div>
            </div>
        </nav>
    </header>

    @RenderBody();
    <hr>

    <!--Footer-->
    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <p>Copyright &copy; Tatvasoft All right reserved.</p>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6 text-right">
                    <ul class="social-list">
                        <li><a href="https://www.facebook.com/"><img src="~/img/facebook.png"></a></li>
                        <li><a href="https://twitter.com/"><img src="~/img/twitter.png"></a></li>
                        <li><a href="https://www.linkedin.com/"><img src="~/img/linkedin.png"></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


 


</body>
</html>
