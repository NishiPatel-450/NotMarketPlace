@model IEnumerable<EmailConfirm.SellNote>

@{
    ViewBag.Title = "NoteDetails";
    Layout = "~/Views/Shared/css_js.cshtml";
    Layout = "~/Views/Shared/Nav.cshtml";
}

    @foreach (var item in Model)
    {
        var base64 = Convert.ToBase64String(item.Display_pic);
        var imgsrc = string.Format("data:/image/gif;base64,{0}", base64);

        var basepdf = Convert.ToBase64String(@item.Upload_note);
        var pdfsrc = string.Format("data:application/pdf;base64,{0}", basepdf);

        <section id="notes-details">
            <div class="container">
                <div class="note-detail">
                    <div class="row">
                        <div class="heading col-md-12">
                            <h3>Notes Details</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-sm-12 col-xs-12 row">
                            <div class="note-img col-md-5 col-sm-4 col-xs-3">
                                <img src="@imgsrc">
                            </div>
                            <div class="col-md-7 col-sm-6 col-xs-6">
                                <div class="note-brief">
                                    <h6>@item.title</h6>
                                    <p>@item.Category</p>
                                    <p class="brief">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quam non labore repudiandae obcaecati soluta temporibus facere adipisci.</p>
                                    <div class="btn">
                                        @Html.ActionLink("DOWNLOAD / $15", "Buyer", "Notes", new { id = item.title,style="color:white" }, null)
                                    </div>
                                    
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-sm-10 col-xs-11">
                            <div class="note-details row">
                                <div class="col-md-5 col-sm-5 col-xs-5 note-detail-title">
                                    <p>Institution:</p>
                                    <p>Country:</p>
                                    <p>Course Name:</p>
                                    <p>Course Code:</p>
                                    <p>Professor:</p>
                                    <p>Number of Pages:</p>
                                    <p>Approve Date:</p>
                                    <p>Rating:</p>
                                </div>
                                <div class="col-md-7 col-sm-7 col-xs-7 note-detail-text">
                                    <p>@item.University_Name</p>
                                    <p>@item.Country</p>
                                    <p>@item.Course</p>
                                    <p>@item.Course_Code</p>
                                    <p>@item.Professor_name</p>
                                    <p>@item.NumberofPages</p>
                                    <p>November 25 2020</p>
                                    <div class="ratings">
                                        <div class="row">
                                            <div class="rate col-md-7 col-sm-7 col-xs-7">
                                                <input type="radio" id="star5" name="rate" value="5" />
                                                <label for="star5" title="text">5 stars</label>

                                                <input type="radio" id="star4" name="rate" value="4" />
