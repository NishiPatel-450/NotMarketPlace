@model IEnumerable<EmailConfirm.Download>

@{
    ViewBag.Title = "AdminPublishNote";
    Layout = "~/Views/Shared/css_js.cshtml";
    Layout = "~/Views/Shared/AdminNav.cshtml";
    WebGrid webGrid = new WebGrid(source: Model);
}

<section id="dashboard">
    <div class="heading-bar container">
        <div class="row">
            <div class="col-md-4 col-sm-4 col-xs-12">
                <h3 class="row">Download Notes</h3>
            </div>
            <div class="col-md-8 col-sm-6 col-xs-12">
                <form role="form" class="row form1">
                    <div class="col-md-6 col-sm-9 col-xs-7 form-group has-feedback has-feedback-left">
                        <img src="Images/img/search-icon.png" class="form-control-feedback">
                        <input type="search" class="form-control" placeholder="Search" />
                    </div>
                    <div class="col-md-3 col-sm-3 col-xs-2">
                        <button class="btn">SEARCH</button>
                    </div>
                    <div class="col-md-3 col-sm-2 col-xs-12 text-right">
                        <select class="form-select">
                            <option>select month</option>
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="sold-table-list">
        <div class="container">
            <div class="row">
                <table class="table col-md-12 col-sm-12 col-xs-12">
                    <tr>
                        <th>SR NO.</th>
                        <th>NOTE TITLE</th>
                        <th>CATEGORY</th>
                        <th>BUYER</th>
                        <th>SELLER</th>
                        <th>SELL TYPE</th>
                        <th>PRICE</th>
                        <th>DOWNLOAD DATE/TIME</th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td class="titile-text">@item.NoteTitle</td>
                            <td>@item.NoteCategory</td>
                            <td>@item.BuyerEmailId</td>
                            <td>@item.Seller</td>
                            <td>Free</td>
                            <td>@item.PurchasedPrice</td>
                            <td>@item.CreatedDate</td>
                            <td><img src="~/img/dots.png"></td>
                        </tr>
                    }
                </table>

            </div>

        </div>
    </div>

    <div class="container page" aria-label="Page navigation example">
        <ul class="pagination">
            <li><a class="page-link-img" href="#"><img src="~/img/left-arrow.png"></a></li>
            <li><a class="page-link" href="#">1</a></li>
            <li><a class="page-link" href="#">2</a></li>
            <li><a class="page-link" href="#">3</a></li>
            <li><a class="page-link" href="#">4</a></li>
            <li><a class="page-link" href="#">5</a></li>
            <li><a class="page-link-img" href="#"><img src="~/img/right-arrow.png"></a></li>
        </ul>
    </div>
</section>
